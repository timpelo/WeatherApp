<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tamk.tiko.com.weatherapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#1ea0fd"
    android:id="@+id/separator">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Town"
        android:id="@+id/cityName"
        android:textColor="#ffffff"
        android:textSize="55dp"
        android:layout_marginBottom="126dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="5dp"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:id="@+id/horizontalSeparator" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_sunny" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/cityName"
        android:id="@+id/refreshButton"
        android:layout_marginTop="100dp"
        android:src="@drawable/refresh_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15Â°C"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/tempertureText"
        android:textColor="#ffffff"
        android:layout_alignLeft="@id/horizontalSeparator"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:id="@+id/settingsButton"
        android:layout_below="@+id/horizontalSeparator"
        android:layout_toEndOf="@+id/cityName" />

</RelativeLayout>
